// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model StoreUser {
  id                              String    @id @default(auto()) @map("_id") @db.ObjectId
  shop                            String    @unique
  shopDomain                      String?
  name                            String?
  email                           String?
  phone                           String?
  country                         String?
  numberOfTimesCartDisplayed      Int?
  billingOn                       DateTime?
  isSubscritionAccepted           Boolean?  @default(false)
  totalRevenue                    Float?
  totalOrdersCountForBillingCycle Int?      @default(0)
  usagePriceRecordForBillingCycle Json[]
  recurringPricingSubscriptionId  String?
  usagePricingSubscriptionId      String?
  recurringPlanPrice              Float?
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Swatch {
  id                      String   @id @default(auto()) @map("_id") @db.ObjectId
  shop                    String
  name                    String   @default("Create swatch")
  published               Boolean  @default(false)
  groupName               String?
  optionName              String?
  selectedProduct         Json[]
  status                  String   @default("draft")
  displayGroup            String   @default("default")
  productPageStyle        String   @default("standard")
  productPageImageSource  String   @default("default")
  collectionPageStyle     String   @default("default")
  collectionPageImageSource String @default("default")
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}
